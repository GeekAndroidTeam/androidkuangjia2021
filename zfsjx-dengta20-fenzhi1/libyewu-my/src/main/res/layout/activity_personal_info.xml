<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:orientation="vertical"
    android:paddingTop="10mm"
    android:scrollbars="none"
    tools:context=".setting.activity.PersonalInfoAct">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="15mm"
        android:paddingRight="15mm">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="头像"
                android:textColor="#ff333333"
                android:textSize="15mm" />

            <com.geek.libglide47.base.CircleImageView
                android:id="@+id/iv_head"
                android:layout_width="50mm"
                android:layout_height="50mm"
                android:layout_alignParentRight="true"
                android:layout_marginTop="13mm"
                android:layout_marginBottom="13mm"
                android:src="@mipmap/my_head_no" />

        </RelativeLayout>

        <View style="@style/lineStyle" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48mm"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="姓名"
                android:textColor="#ff333333"
                android:textSize="15mm" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:textColor="#ff333333"
                android:textSize="15mm"
                tools:text="测试" />

        </RelativeLayout>

        <View style="@style/lineStyle" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48mm"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="手机号"
                android:textColor="#ff333333"
                android:textSize="15mm" />

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:drawableRight="@mipmap/my_tv_right"
                android:drawablePadding="8mm"
                android:gravity="center_vertical"
                android:textColor="#ff333333"
                android:textSize="15mm"
                tools:text="123456788" />

        </RelativeLayout>

        <View style="@style/lineStyle" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48mm"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="所属党组织"
                android:textColor="#ff333333"
                android:textSize="15mm" />

            <TextView
                android:id="@+id/tv_party_organization"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:drawablePadding="8mm"
                android:gravity="center_vertical"
                android:textColor="#ff333333"
                android:textSize="15mm"
                tools:text="党组织" />

        </RelativeLayout>

        <View style="@style/lineStyle" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48mm"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="状态"
                android:textColor="#ff333333"
                android:textSize="15mm" />

            <TextView
                android:id="@+id/tv_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:drawableLeft="@mipmap/my_tv_state"
                android:drawableRight="@mipmap/my_tv_right"
                android:drawablePadding="8mm"
                android:gravity="center_vertical"
                android:textColor="#ff333333"
                android:textSize="15mm"
                tools:text="状态" />

        </RelativeLayout>

        <View style="@style/lineStyle" />

    </androidx.appcompat.widget.LinearLayoutCompat>


</androidx.core.widget.NestedScrollView>