<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F4F4"
    >

    <xyz.doikki.videoplayer.player.VideoView
        android:id="@+id/player"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:visibility="gone"
        />

    <xyz.doikki.videoplayer.player.VideoView
        android:id="@+id/audioPlayer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:playerBackgroundColor="@color/white"
        android:visibility="gone"
        />

    <com.zcolin.gui.webview.ZWebView
        android:id="@+id/webView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        />

    <TextView
        android:visibility="gone"
        android:id="@+id/tv_sh_look"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/eduresource_shape_common_red"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:layout_marginEnd="15dp"
        android:textColor="@color/white"
        android:layout_alignParentRight="true"
        android:text="审核预览"/>

    <com.fosung.lighthouse.jiaoyuziyuan.widgets.scrolllayout.ScrollLayout
        android:id="@+id/scroll_down_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="10dp"
            android:background="@color/white"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/tvTouchView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/icon_edu_scroll"
                android:text="点击弹起/关闭" />

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabs"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingTop="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                app:tabIndicator="@drawable/eduresource_shape_common_red"
                app:tabIndicatorColor="@color/colorPrimary"
                app:tabIndicatorHeight="3dp"
                app:tabMode="scrollable"
                app:tabPaddingEnd="10dp"
                app:tabPaddingStart="10dp"
                app:tabRippleColor="@null"
                app:tabSelectedTextColor="@color/color_333333"
                app:tabTextColor="#999999" />

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/viewpager"
                android:layout_below="@+id/tabs"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </RelativeLayout>

    </com.fosung.lighthouse.jiaoyuziyuan.widgets.scrolllayout.ScrollLayout>

</RelativeLayout>