<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/dkt_topic_pub_time_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发布时间："
                android:textSize="15sp"
                android:gravity="center"
                android:textColor="@color/gray_mid"
                android:padding="10dp"/>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_toRightOf="@+id/dkt_topic_pub_time_title"
                android:textSize="15sp"
                android:layout_centerVertical="true"
                android:text=""
                android:textColor="@color/gray_mid"
                android:id="@+id/dkt_topic_pub_time"
                />

        </RelativeLayout>

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/separator"
            android:background="@color/bg_color"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/dkt_topic_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="   "
                android:textSize="17sp"
                android:textColor="@color/gray_dark"
                android:layout_toLeftOf="@+id/dkt_separate_btn"
                android:layout_alignParentLeft="true"
                android:padding="10dp"
                 />

            <ImageButton
                android:id="@+id/dkt_separate_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignBottom="@+id/dkt_topic_name"
                android:background="@null"
                android:onClick="onClick"
                android:padding="10dp"
                android:src="@drawable/arrow_btn_selector" />

        </RelativeLayout>


        <TextView
            android:id="@+id/dkt_topic_desc"
            android:layout_width="match_parent"
            android:text="专题描述"
            android:textSize="16sp"
            android:textColor="@color/gray_mid"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:ellipsize="end"
            />
    </LinearLayout>

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/separator"
        android:background="@color/bg_color"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="选集"
        android:textColor="@color/gray_dark"
        android:textSize="17sp"
        android:drawableLeft="@drawable/icon_red_v_line"
        android:drawablePadding="@dimen/dimens_mid"
        android:padding="@dimen/dimens_mid" />
</LinearLayout>