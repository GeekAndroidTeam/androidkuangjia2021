<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_parent"
    style="@style/Match"
    android:background="@drawable/main_bg"
    android:orientation="vertical"
    android:paddingBottom="30dp"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:paddingTop="30dp"
    tools:context=".mian.activity.VideoActivity">

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:drawableLeft="@drawable/ic_sphy_small"
            android:drawablePadding="15dp"
            android:gravity="center"
            android:text="更多视频"
            android:textColor="@color/white"
            android:textSize="28dp" />

        <ImageView
            android:id="@+id/wifi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@+id/personal"
            android:src="@drawable/im_wifi"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/personal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:src="@drawable/im_personal"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/detail_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@+id/wifi"
            android:src="@drawable/back_bg" />


    </RelativeLayout>

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:background="@drawable/item_void"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/item_void"
                >

                <com.zplayer.library.ZPlayer
                    android:id="@+id/recommend"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    />

<!--                <ImageView-->
<!--                    android:id="@+id/iv_radio"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:scaleType="fitXY"-->
<!--                    android:src="@mipmap/ic_video_radio"-->
<!--                     />-->

            </FrameLayout>

            <TextView
                android:id="@+id/tv_note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:padding="15dp"
                android:textColor="@color/white"
                android:textSize="16sp"
                tools:text="暂无描述" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_left"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:layout_marginTop="20dp"
            >

            <RadioGroup
                android:id="@+id/titlelayout"
                style="@style/Match.Width"
                android:layout_height="50dp"
                android:background="@drawable/item_void"
                android:gravity="center"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/news"
                    style="@style/Match.WidthWeight"
                    android:background="@drawable/tab_video_left"
                    android:button="@null"
                    android:checked="true"
                    android:gravity="center"
                    android:text="视频新闻"
                    android:textColor="@color/white"
                    android:textSize="18dp" />


                <RadioButton
                    android:id="@+id/dinfindnews"
                    style="@style/Match.WidthWeight"
                    android:background="@drawable/tab_video_right"
                    android:button="@null"
                    android:gravity="center"
                    android:text="自定义媒体库"
                    android:textColor="@color/white"
                    android:textSize="18dp" />
            </RadioGroup>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/RecyclerView"
                style="@style/Match"
                android:layout_below="@id/titlelayout"
                android:background="@drawable/item_void" />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>