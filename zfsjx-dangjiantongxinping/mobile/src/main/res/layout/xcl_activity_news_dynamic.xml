<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/id_linear_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/id_zhibu_activity"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:text="支部活动"
            android:textColor="@color/red"
            android:textSize="13dp"
            android:background="@drawable/item_xcl_shape_corner"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/id_zhibu_work" />

        <Button
            android:id="@+id/id_zhibu_work"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="6dp"
            android:text="支部动态"
            android:textColor="@color/red"
            android:textSize="13dp"
            android:background="@drawable/item_xcl_shape_corner"
            app:layout_constraintLeft_toRightOf="@+id/id_zhibu_activity"
            app:layout_constraintRight_toRightOf="parent" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/id_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_linear_buttons" />

</LinearLayout>
