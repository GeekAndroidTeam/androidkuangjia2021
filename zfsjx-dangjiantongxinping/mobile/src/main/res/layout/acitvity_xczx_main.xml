<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_app">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingRight="9dp">

        <TextView
            android:id="@+id/tv_xczx_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="17dp"
            android:text="2019年02月26日  星期三   09:00:00"
            android:textColor="@color/black"
            android:textSize="17dp" />

        <ImageView
            android:id="@+id/iv_unuserid_wifi"
            android:layout_width="17dp"
            android:layout_height="14dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="34dp"
            android:scaleType="fitXY"
            android:src="@drawable/icon_xczx_wifi" />

    </LinearLayout>

    <TextView
        android:id="@+id/iv_conf"
        android:layout_width="202dp"
        android:layout_height="58.7dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="150dp"
        android:gravity="center"
        android:text="开始决议会议"
        android:textColor="@color/white"
        android:textSize="26.7sp" />

    <View
        android:id="@+id/faceMode"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:clickable="true" />

    <View
        android:id="@+id/restart"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_alignParentBottom="true"
        android:clickable="true" />
</RelativeLayout>