<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg"
    android:orientation="vertical"
    tools:context=".mian.activity.Face_collect_Activity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:drawableLeft="@drawable/face_nav"
            android:drawablePadding="15dp"
            android:gravity="center"
            android:text="人脸采集"
            android:textColor="@color/white"
            android:textSize="22dp" />

        <ImageView
            android:id="@+id/wifi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@+id/personal"
            android:src="@drawable/im_wifi" />

        <ImageView
            android:id="@+id/personal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:src="@drawable/im_personal" />

        <ImageView
            android:id="@+id/detail_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@+id/wifi"
            android:src="@drawable/back_bg" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:layout_weight="5"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.3"
                android:background="@drawable/item_void_light"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:background="@drawable/item_void_light_special"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="15dp"
                        android:text="人脸采集"
                        android:textColor="@color/white"
                        android:textSize="25dp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingLeft="20dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/iv_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/face_number_pr" />

                        <TextView
                            android:id="@+id/stepone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/iv_number"
                            android:text="第一步："
                            android:textColor="@color/white" />

                        <TextView
                            android:id="@+id/steptwo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/iv_number"
                            android:layout_toRightOf="@+id/iv_number"
                            android:text="信息录入："
                            android:textColor="@color/white"
                            android:textSize="22dp" />

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"></LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/iv_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/face_ph_no" />

                        <TextView
                            android:id="@+id/stepone_ph"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/iv_phone"
                            android:text="第二步："
                            android:textColor="@color/white" />

                        <TextView
                            android:id="@+id/steptwo_ph"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/iv_phone"
                            android:layout_toRightOf="@+id/iv_phone"
                            android:text="信息录入："
                            android:textColor="@color/white"
                            android:textSize="22dp" />

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center"></LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:layout_weight="2"
            android:padding="30dp"
            android:background="@drawable/item_void_light"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_weight="3"
                    android:id="@+id/navigation"
                    android:background="@drawable/item_void_light_special"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextureView
                        android:id="@+id/texture_preview"
                        android:layout_width="match_parent"
                        android:layout_gravity="center"
                        android:layout_height="match_parent" />

                    <com.arcsoft.arcface.widget.FaceRectView
                        android:id="@+id/face_rect_view"
                        android:layout_width="match_parent"
                        android:layout_gravity="center"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:id="@+id/tv_x"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:textColor="@android:color/white"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:id="@+id/face_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/face_cam" />

                    <Button
                        android:id="@+id/camera"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|bottom"
                        android:layout_marginBottom="20dip"
                        android:background="@drawable/face_operate_gradient"
                        android:text="拍摄"
                        android:textColor="@color/white" />
                </FrameLayout>

                <RelativeLayout
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dimens_large"
                    android:paddingLeft="@dimen/dimens_small"
                    android:paddingRight="@dimen/dimens_large">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="姓  名："
                            android:paddingTop="@dimen/dimens_mid"
                            android:textColor="@color/white"
                            android:textSize="@dimen/textsize_big" />

                        <TextView
                            android:id="@+id/tv_identify"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/dimens_mid"
                            android:text="身份证："
                            android:visibility="gone"
                            android:textColor="@color/white"
                            android:textSize="@dimen/textsize_big" />

                        <TextView
                            android:id="@+id/tv_org_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="党组织："
                            android:paddingTop="@dimen/dimens_mid"
                            android:textColor="@color/white"
                            android:textSize="@dimen/textsize_big" />

                    </LinearLayout>

                    <FrameLayout
                        android:layout_width="250dp"
                        android:layout_height="300dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="@dimen/dimens_mid">

                        <ImageView
                            android:id="@+id/image_show"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:background="@drawable/face_show_head" />

                        <TextView
                            android:id="@+id/image_desc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="待拍摄"
                            android:textColor="#F1C3C3"
                            android:textSize="@dimen/textsize_small" />
                    </FrameLayout>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimens_mid"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/pre_step"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dimens_mid"
                    android:background="@drawable/face_pre_step_gradient"
                    android:text="上一步"
                    android:layout_marginLeft="80dp"
                    android:textColor="#D02B2F" />

                <Button
                    android:id="@+id/save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimens_mid"
                    android:background="@drawable/face_operate_gradient"
                    android:text="保    存"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>