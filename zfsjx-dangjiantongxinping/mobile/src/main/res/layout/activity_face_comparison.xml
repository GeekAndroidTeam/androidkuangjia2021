<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:drawableLeft="@drawable/face_nav"
            android:drawablePadding="15dp"
            android:gravity="center"
            android:text="人脸验证"
            android:textColor="@color/white"
            android:textSize="22dp" />

        <ImageView
            android:id="@+id/wifi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/personal"
            android:layout_marginEnd="16dp"
            android:visibility="gone"
            android:layout_toStartOf="@+id/personal"
            android:src="@drawable/im_wifi" />

        <TextView
            android:id="@+id/personal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="返        回"
            android:paddingRight="25dp"
            android:paddingLeft="25dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:textColor="@color/white"
            android:background="@drawable/item_type_press"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
           />

        <TextView
            android:id="@+id/detail_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@+id/wifi"
            android:paddingRight="25dp"
            android:paddingLeft="25dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="重新验证"
            android:textColor="@color/white"
            android:background="@drawable/item_type_press" />


    </RelativeLayout>

    <FrameLayout
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:background="@drawable/item_void_light_special">

        <TextureView
            android:id="@+id/texture_preview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center" />

        <com.arcsoft.arcface.widget.FaceRectView
            android:id="@+id/face_rect_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/tv_x"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:visibility="gone" />

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_info"
            android:layout_width="wrap_content"
            android:lineSpacingExtra="10dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="@drawable/item_void_bg"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:paddingRight="60dp"
            android:paddingLeft="60dp"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </FrameLayout>


</LinearLayout>
