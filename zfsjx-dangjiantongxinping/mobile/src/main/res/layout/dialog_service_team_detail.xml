<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="36dp">

    <Button
        android:id="@+id/id_dialog_close"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/icon_service_close" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/id_dialog_close"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="26dp"
            android:layout_marginRight="26dp"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="26dp">

            <ImageView
                android:id="@+id/id_dialog_header"
                android:layout_width="190dp"
                android:layout_height="254.5dp"
                android:layout_gravity="center"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/id_dialog_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:gravity="center"
                android:text="单晓兵"
                android:textColor="@color/red"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/id_dialog_position"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:lines="2"
                android:text="支部书记、董事长"
                android:textColor="@color/red"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/id_dialog_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="6dp"
                android:text="岗位职责：主持支部党建工作，全面负责公司业务"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/id_dialog_tell"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="6dp"
                android:ellipsize="end"
                android:lines="2"
                android:text="联系方式：0531-459987521"
                android:textSize="10dp" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>