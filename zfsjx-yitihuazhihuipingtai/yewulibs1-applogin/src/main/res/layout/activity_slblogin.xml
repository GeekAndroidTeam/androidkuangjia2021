<?xml version="1.0" encoding="utf-8"?>
<com.haier.cellarette.baselibrary.zothers.AutoHideInputMethodFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/afl1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/iconlogin3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv1"
            android:layout_width="15mm"
            android:layout_height="15mm"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="33mm"
            android:layout_marginTop="40mm"
            android:src="@drawable/hxkt_icon_xxx"
            android:visibility="gone" />

        <TextView
            android:layout_width="525mm"
            android:layout_height="88mm"
            android:background="#4CFFFFFF"
            android:gravity="center"
            android:text="账号登录"
            android:textColor="@color/white"
            android:textSize="26mm"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/iv_bg1"
            android:layout_width="290mm"
            android:layout_height="228mm"
            android:layout_gravity="center_horizontal"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="525mm"
            android:layout_height="374mm"
            android:background="#33FFFFFF"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="65mm"
                android:layout_marginLeft="50mm"
                android:layout_marginTop="44mm"
                android:layout_marginRight="50mm"
                android:background="#4CFFFFFF"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="22mm"
                    android:layout_height="22mm"
                    android:layout_marginLeft="21mm"
                    android:src="@mipmap/iconlogin1" />

                <EditText
                    android:id="@+id/ed1111"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20mm"
                    android:background="@null"
                    android:ellipsize="none"
                    android:gravity="center_vertical"
                    android:hint="用户名"
                    android:maxLength="8"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="30mm" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="65mm"
                android:layout_marginLeft="50mm"
                android:layout_marginTop="44mm"
                android:layout_marginRight="50mm"
                android:background="#4CFFFFFF"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="22mm"
                    android:layout_height="22mm"
                    android:layout_marginLeft="21mm"
                    android:src="@mipmap/iconlogin1" />

                <EditText
                    android:id="@+id/ed2222"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20mm"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="密码"
                    android:imeOptions="flagNoExtractUi"
                    android:inputType="textPassword"
                    android:maxLength="10"
                    android:text=""
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="30mm" />

                <ImageView
                    android:id="@+id/iv1111"
                    android:layout_width="22mm"
                    android:layout_height="22mm"
                    android:layout_marginLeft="21mm"
                    android:layout_marginRight="21mm"
                    android:src="@mipmap/iconlogin5" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="428mm"
                android:layout_height="83mm"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="44mm"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginRight="15mm"
                    android:layout_weight="1"
                    android:background="@mipmap/iconlogin4"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv1111"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="6mm"
                        android:background="#33FFFFFF"
                        android:gravity="center"
                        android:text="登录"
                        android:textColor="#245399"
                        android:textSize="34mm" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="15mm"
                    android:layout_weight="1"
                    android:background="@mipmap/iconlogin4"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv2222"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="6mm"
                        android:background="#33FFFFFF"
                        android:gravity="center"
                        android:text="关闭"
                        android:textColor="#245399"
                        android:textSize="34mm" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="525mm"
        android:layout_height="wrap_content"
        android:layout_marginTop="44mm"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号"
            android:textColor="@color/color_333333"
            android:textSize="15mm"
            android:visibility="gone" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="44mm"
            android:orientation="horizontal">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textinputlayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/yhzc_tip4"
                android:orientation="vertical"
                android:textColorHint="@color/color_dcdcdc"
                android:visibility="gone"
                app:errorEnabled="false"
                app:errorTextAppearance="@style/ErrorText"
                app:hintAnimationEnabled="false"
                app:hintTextAppearance="@style/ErrorText">

                <!--            android:fontFamily="sans-serif-light"-->
                <!--            android:textStyle="italic"-->


                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edt1"
                    android:layout_width="200mm"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10mm"
                    android:background="@null"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:maxLength="11"
                    android:maxLines="1"
                    android:paddingTop="10mm"
                    android:paddingBottom="10mm"
                    android:text=""
                    android:textAllCaps="true"
                    android:textColor="@color/black_000"
                    android:textCursorDrawable="@drawable/common_ed_bg1"
                    android:textSize="16mm" />

                <!--                    <com.google.android.material.textfield.TextInputEditText-->
                <!--                        android:id="@+id/edt1"-->
                <!--                        android:layout_width="200mm"-->
                <!--                        android:layout_height="wrap_content"-->
                <!--                        android:layout_marginTop="10mm"-->
                <!--                        android:background="@null"-->
                <!--                        android:imeOptions="actionDone"-->
                <!--                        android:inputType="number"-->
                <!--                        android:maxLength="11"-->
                <!--                        android:maxLines="1"-->
                <!--                        android:paddingTop="10mm"-->
                <!--                        android:paddingBottom="10mm"-->
                <!--                        android:text=""-->
                <!--                        android:textAllCaps="true"-->
                <!--                        android:textColor="@color/black_000"-->
                <!--                        android:textCursorDrawable="@drawable/common_ed_bg1"-->
                <!--                        android:textSize="16mm" />-->

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5mm"
                    android:background="#D8D8D8" />
            </com.google.android.material.textfield.TextInputLayout>

            <ImageView
                android:id="@+id/iv_xx"
                android:layout_width="20mm"
                android:layout_height="20mm"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20mm"
                android:src="@drawable/hxkt_icon_xx"
                android:visibility="gone"
                tools:visibility="visible" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="33mm"
        android:layout_marginTop="20mm"
        android:layout_marginRight="33mm"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="验证码"
            android:textColor="@color/color_333333"
            android:textSize="15mm" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10mm"
            android:orientation="horizontal">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textinputlayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/yhzc_tip41"
                android:orientation="vertical"
                android:textColorHint="@color/color_dcdcdc"
                app:hintAnimationEnabled="true"
                app:hintTextAppearance="@style/ErrorText">

                <!--            android:fontFamily="sans-serif-light"-->
                <!--            android:textStyle="italic"-->

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edt2"
                    android:layout_width="200mm"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10mm"
                    android:background="@null"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:maxLength="11"
                    android:maxLines="1"
                    android:paddingTop="10mm"
                    android:paddingBottom="10mm"
                    android:text=""
                    android:textAllCaps="true"
                    android:textColor="@color/black_000"
                    android:textCursorDrawable="@drawable/common_ed_bg1"
                    android:textSize="16mm" />

                <!--                    <com.google.android.material.textfield.TextInputEditText-->
                <!--                        android:id="@+id/edt2"-->
                <!--                        android:layout_width="200mm"-->
                <!--                        android:layout_height="wrap_content"-->
