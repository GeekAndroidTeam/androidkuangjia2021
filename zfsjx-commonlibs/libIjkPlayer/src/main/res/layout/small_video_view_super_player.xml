<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/app_video_box"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000">

    <com.zplayer.library.mediaplayer.IjkVideoView
        android:id="@+id/video_view"
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:layout_height="match_parent" />
    <include layout="@layout/view_super_player_center" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/app_video_bottom_box"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_class_hour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:drawableTop="@drawable/ic_class_hour"
            android:paddingTop="15dp"
            android:text="0.5学时"
            android:visibility="gone"
            android:textColor="@android:color/white"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/thumbs_up_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:drawableTop="@drawable/ic_heart_unchecked"
            android:gravity="center"
            android:text="1.6w"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_collection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:drawableTop="@drawable/ic_uncollected"
            android:gravity="center"
            android:text="1.6w"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:drawableTop="@drawable/ic_course_share"
            android:gravity="center"
            android:text="1.6w"
            android:textColor="@android:color/white"
            android:textSize="14sp" />
    </LinearLayout>
    <!--<include layout="@layout/small_video_view_super_player_center_right"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_alignParentRight="true"-->
        <!--android:layout_above="@+id/app_video_bottom_box" />-->
    <!-- bottom -->
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/app_video_bottom_box"
        android:layout_width="match_parent"
        android:paddingBottom="20dp"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content"
        android:background="@drawable/small_video_super_player_bottom_bg"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/video_text_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/course_make_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dip"
                android:text=""
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:visibility="gone"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/course_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dip"
                    android:paddingRight="10dp"
                    android:visibility="gone"
                    android:text=""
                    android:textColor="@android:color/white"
                    android:textSize="14sp" />

                <LinearLayout
                    android:id="@+id/course_label"
                    android:layout_width="wrap_content"
                    android:visibility="gone"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dip"
                    android:paddingRight="10dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" />
            </LinearLayout>

            <TextView
                android:id="@+id/course_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:paddingTop="10dip"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text=""
                android:textColor="@android:color/white"
                android:visibility="gone"
                android:textSize="12sp" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/video_ope"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/video_text_desc">

            <LinearLayout
                android:id="@+id/view_jky_player_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/app_video_play"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:src="@drawable/superplayer_ic_play" />

                <TextView
                    android:id="@+id/view_jky_player_tv_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawableLeft="@drawable/superplayer_ic_live_number"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:text="12"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:visibility="gone" />
            </LinearLayout>

            <TextView
                android:id="@+id/app_video_currentTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/view_jky_player_left"
                android:text="06:21"
                android:textColor="@android:color/white"
                android:textSize="12sp" />

            <SeekBar
                android:id="@+id/app_video_seekBar"
                style="@style/IjkPlayer_SeekBarAppTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_toLeftOf="@+id/app_video_endTime"
                android:layout_toRightOf="@+id/app_video_currentTime"
                android:splitTrack="false" />

            <TextView
                android:id="@+id/app_video_endTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/view_jky_player_fullscreen"
                android:text="10:10"
                android:textColor="@android:color/white"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/view_jky_player_fullscreen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="10dp"
                android:visibility="visible"
                android:src="@drawable/superplayer_ic_enlarge" />
        </RelativeLayout>
    </RelativeLayout>
    <!--<include layout="@layout/small_video_view_super_player_bottom"-->
        <!--android:id="@+id/app_video_bottom_box"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_alignParentBottom="true"-->
        <!--android:layout_height="wrap_content"/>-->
